<h1>Mashable 007</h1>

<form action="/sort" method="get" accept-charset="utf-8">
	<select name="" class="dropdown">
		<% @categories.each do |cat|%>
			<option value='<%= cat %>'><%= cat %></option>
		<% end %>
	</select>
</form>

<% @stories.each do |story| %>
	<article class='col-md-4'>
		<a href='<%= story['link'] %>' target="_blank">
			<img src='<%= story['image'] %>' width="300px" /><br />
		</a>
		<a href='<%= story['link'] %>' target="_blank">
			<%= story['title'] %>
		</a>
		<p>
			<%= story['excerpt'] %>
		</p>
		<p>
			Category = <%= story['channel'] %>
		</p>
	</article>
<% end %>

